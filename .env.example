# Application
APP_NAME="Loan Management System"
DEBUG=True

# Database
# SQLite (default)
DATABASE_URL=sqlite:///./loan_management.db

# PostgreSQL
# DATABASE_URL=postgresql://username:password@localhost:5432/loan_db

# MySQL
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/loan_db

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OTP Settings
OTP_EXPIRE_MINUTES=10
OTP_LENGTH=6

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com

# SMS Configuration (Optional)
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://api.sms-provider.com/send